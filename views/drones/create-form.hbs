<h2 class="mt-3">Create a new drone</h2>

<form action="/drones/create" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" name="name" class="form-control" id="name">
  </div>

  <div class="mb-3">
    <label for="propellers" class="form-label">Propellers</label>
    <input type="text" name="propellers" class="form-control" id="propellers">
  </div>

  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Max Speed</label>
    <input type="maxSpeed" name="maxSpeed" class="form-control" id="maxSpeed">
  </div>

  <button type="submit" class="btn btn-primary">Create</button>
</form>
